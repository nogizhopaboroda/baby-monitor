#!/bin/sh

PARAMETERS="-eadb:$AUDIO_GAIN $ECASOUND_FILTERS"

ecasound -a:all -f:16,$MICROPHONE_CHANNELS,$MICROPHONE_SAMPLE_RATE -i $AUDIODEV -b:$AUDIO_BUFFER_SIZE \
	 -a:1 -f:$RAW_AUDIO_FORMAT,$AUDIO_CHANNELS,$RAW_AUDIO_SAMPLE_RATE $PARAMETERS -o $PIPES_DIR/$RAW_AUDIO_RECORDING_PIPE \
	 -a:2 -f:$RAW_AUDIO_FORMAT,$AUDIO_CHANNELS,$AUDIO_SAMPLE_RATE $PARAMETERS -o $PIPES_DIR/$RAW_AUDIO_RECORDING_PIPE_1
