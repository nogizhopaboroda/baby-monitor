#!/bin/sh

MICROPHONE_FILTERS="-eadb:$AUDIO_GAIN -efl:$AUDIO_LOW_PASS_FILTER -efh:$AUDIO_HIGH_PASS_FILTER"

ecasound -a:all -f:16,1,44100 -i $AUDIODEV -b:$AUDIO_BUFFER_SIZE \
	 -a:1 -f:$RAW_AUDIO_FORMAT,$AUDIO_CHANNELS,$AUDIO_SAMPLE_RATE $MICROPHONE_FILTERS -o $PIPES_DIR/$RAW_AUDIO_RECORDING_PIPE \
	 -a:2 -f:$RAW_AUDIO_FORMAT,$AUDIO_CHANNELS,$AUDIO_SAMPLE_RATE $MICROPHONE_FILTERS -o $PIPES_DIR/$RAW_AUDIO_RECORDING_PIPE_1
